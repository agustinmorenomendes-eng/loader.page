<body>

<div class="box">
  <h2>Acceso privado</h2>
  <input type="password" id="key" placeholder="Ingresa la key">
  <button onclick="checkKey()">Entrar</button>

  <div id="content" style="display:none;">
    <textarea id="loader" readonly></textarea>
    <button onclick="copy()">Copiar loadstring</button>
  </div>
</div>

<script>
  const PASSWORD = "cristx.xz"; // üîê TU KEY
  const SCRIPT_URL = "https://raw.githubusercontent.com/agustinmorenomendes-eng/cristxzscripts/main/cristxzscripts.lua";

  function checkKey() {
    const key = document.getElementById("key").value;
    if (key === PASSWORD) {
      document.getElementById("content").style.display = "block";
      document.getElementById("loader").value =
        `loadstring(game:HttpGet("${SCRIPT_URL}"))()`;
    } else {
      alert("Key incorrecta");
    }
  }

  function copy() {
    const text = document.getElementById("loader");
    text.select();
    document.execCommand("copy");
    alert("Loadstring copiado");
  }
</script>

</body>
